  (defcap CAP:bool ())
)

(module implC g
  (defcap g () true)

  (implements i)
  (defun f:bool () true)

  (defcap CAP:bool () (enforce true "success"))
)

(module implD g
  (defcap g () true)

  (implements i)
  (defun f:bool () true)

  (defcap CAP:bool () (enforce false "failure"))
)

(commit-tx)
