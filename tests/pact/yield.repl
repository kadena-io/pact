(begin-tx)
(define-keyset 'k (sig-keyset))
(module yieldtest 'k
  (defpact tester (name)
    (step-with-rollback
     "A"
     (let ((nameA (+ name "->A")))
       (yield { "a-result": nameA})
       nameA)

     "rollback-a")

    (step "B"
      (resume { "a-result" := ar }
        (+ ar "->B")))
    )

  ;; test target chainid overloads in yield
  (defpact tester2 (name)
    (step-with-rollback
     "A"
     (let ((nameA (+ name "->A")))
       (yield "new-tid" { "a-result": nameA })
       nameA)

     "rollback-a")

    (step "B"
      (resume { "a-result" := a }
        (+ a "->B")))
    )



)
(commit-tx)

(begin-tx)
(use yieldtest)

(env-entity "B")
(env-hash (hash "stu-pact-id"))
(tester "stu")
(expect "step 0 skips B" false (at "executed" (pact-state true)))

(env-entity "A")
(expect "step 0 executes" "stu->A" (tester "stu"))
;; set resume for step 1
(env-entity "B")
(expect "step 1 executes" "stu->A->B" (continue-pact 1))

;; test 1 skips A
(env-entity "A")
(continue-pact 1)
(expect "step 1 skips A" false (at "executed" (pact-state)))

;; test rollback
(expect "step 1 rollback executes" "rollback-a" (continue-pact 0 true))
;; test no rollback for B
(env-entity "B")
(continue-pact 0 true)
(expect "step 0 rollback skips B" false (at "executed" (pact-state)))
(commit-tx)


;; test overwriting yield with continue-pact
(begin-tx)
(use yieldtest)
(env-hash (hash "stu-pact-id"))
(env-entity "A")
(expect "step 0 executes" "stu->A" (tester "stu"))

(env-entity "B")
(expect "step 1 executes with new yield value"
	"someRandomStr->B"
	(continue-pact 1 false (hash "stu-pact-id") {"a-result": "someRandomStr"}))
(commit-tx)

