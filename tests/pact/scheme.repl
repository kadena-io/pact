;; Test that all PPKScheme's Public Keys transformed into expected Address

(begin-tx)
(use scheme)

(env-keys [(format-address "ED25519"
              "7d0c9ba189927df85c8c54f8b5c8acd76c1d27e923abbf25a957afdf25550804")
